<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="8sp"
    android:scrollbars="none">



    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoriesChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipNature"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="NATURE"
                android:checked="true"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/background_color"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDog"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="DOG"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/background_color"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCat"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="CAT"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/background_color"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4K"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="4K"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/background_color"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chipAnimal"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Animal"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/background_color"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFashion"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Fashion"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/background_color"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipData"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Data"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/background_color"/>
        </com.google.android.material.chip.ChipGroup>
    </TableLayout>

</HorizontalScrollView>